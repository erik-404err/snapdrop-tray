{
  "name": "snapdrop-tray",
  "version": "1.0.0",
  "description": "Crossplatform Snapdrop Client with functional Tray Icon, ported with Electron ",
  "main": "main.js",
  "homepage": "https://github.com/erik-404err/snapdrop-tray",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "distlin": "electron-builder --linux",
    "distwin": "electron-builder --win"
  },
  "author": "erik-404err",
  "license": "MIT",
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "electron-store": "^6.0.1",
    "mime-types": "^2.1.27",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.electron.snapdrop-tray",
    "productName": "Snapdrop Tray",
    "win": {
      "target": "nsis",
      "icon": "../images/512x512.png"
    },
    "linux": {
      "target": [ "deb" ],
      "maintainer": "erik-404err",
      "category": "Office",
      "icon": "../images/512x512.png"
    },
    "deb": {
      "packageCategory": "Office",
      "depends": [
        "libappindicator1",
        "libnotify4"
      ]   
    },
    "extraFiles":[
      {
        "from": "./images",
        "to": "./resources/images"
      },
      {
        "from": "./images",
        "to": "./images"
      }
    ]
  }
}
